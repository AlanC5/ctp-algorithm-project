<h1>Register</h1>
<form class="col s6 offset-s3">
    <div class="input-field">
      <i class="material-icons prefix">account_circle</i>
      <input id="name" type="text" class="validate">
      <label for="icon_prefix">First Name</label>
    </div>

    <div class="input-field">
      <i class="material-icons prefix">phone</i>
      <input id="personal-telephone" type="tel" class="validate">
      <label for="icon_telephone">Telephone Numbers to send to</label>
    </div>

		<div class="input-field">
      <i class="material-icons prefix">mode_edit</i>
      <input id="message" type="tel" class="validate">
      <label for="icon_telephone">Message</label>
    </div>

		<button class="btn waves-effect waves-light" type="submit" name="action" style="position:absolute; bottom:-55px; right:11px;">Send Text Messages
		    <i class="material-icons right">send</i>
		</button>
</form>
