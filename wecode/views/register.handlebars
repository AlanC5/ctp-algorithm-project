<link rel="stylesheet" href="/public/css/register.css">
<div id="login_body" class="body_padding">
<div class="row">
    <div class="col s4">
    </div>
    <form class="col s4" id="form_validate" name="register" action="/register" method="post">
      <div class="input-field col s12">
        <i class="material-icons prefix">email</i>
        <input id="email" type="email" name="email" class="validate" required>
        <label for="email" data-error="Please enter valid email.">Email</label>
      </div>

      <div class="input-field col s12">
        <i class="material-icons prefix">account_circle</i>
        <input id="username" type="text" name="username" class="validate" required>
        <label for="username" data-error="Please enter valid username.">Username</label>
      </div>

    		<div class="input-field col s12">
        <i class="material-icons prefix">lock</i>
        <input id="password" type="password" name="password" class="validate" required>
        <label for="password" data-error="Please enter valid password.">Password</label>
      </div>

    		<button class="btn waves-effect waves-light" type="submit" name="action" style="float: right;">Register</button>
    </form>
    <div class="col s4">
    </div>
</div>
</div>

<script src="/public/js/register.js" defer></script>
